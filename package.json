    "eslint": "^8.10.0",
    "eslint-plugin-n8n-nodes-base": "^1.16.3",
    "n8n-workflow": "^0.147.0",
    "prettier": "^2.7.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "amazon-paapi": "^1.0.7",
    "gulp": "^5.0.0",
    "path": "^0.12.7"
  }
}
